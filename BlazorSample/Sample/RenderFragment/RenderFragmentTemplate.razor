@typeparam TItem

<table class="table">
    <thead>
        <tr>@TableHeader</tr>
    </thead>
    <tbody>
        @foreach (var item in Items)
        {
            <tr>@RowTemplate(item)</tr>
        }
    </tbody>
</table>

@code {
    [Parameter]
    public required RenderFragment TableHeader { get; set; }

    [Parameter]
    public required RenderFragment<TItem> RowTemplate { get; set; }

    [Parameter]
    public required IReadOnlyList<TItem> Items { get; set; }
}