@page "/template-component"

<h1>RenderFragment テンプレートコンポーネント サンプル</h1>

<RenderFragmentTemplate Items="employees" Context="employee">
    <TableHeader>
        <th>ID</th>
        <th>Name</th>
    </TableHeader>
    <RowTemplate>
        <td>@employee.Id</td>
        <td>@employee.Name</td>
    </RowTemplate>
</RenderFragmentTemplate>

@code {
    private List<Employee> employees = new()
    {
        new() { Id = 1, Name = "田中 太郎" },
        new() { Id = 2, Name = "高橋 花子" },
        new() { Id = 3, Name = "鈴木 次郎" },
    };

    private class Employee
    {
        public required int Id { get; set; }
        public required string Name { get; set; }
    }
}